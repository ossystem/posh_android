<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ru.jufy.myposh.fragments.LibraryFragment">





    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_recycler"
        android:paddingTop="80dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    <View
        android:id="@+id/shadow_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow_background"
        android:visibility="gone"></View>

    <ru.jufy.myposh.views.ArcLayout
        android:id = "@id/arc_layout"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <android.support.design.widget.FloatingActionButton
            android:id = "@+id/fab_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_position = "middle"
            app:rippleColor="@color/light_fab_ripple"
            app:backgroundTint="@color/light_fab"
            android:tint="@color/light_fab_fg"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            />
        </ru.jufy.myposh.views.ArcLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/icons"
        app:rippleColor="@color/dark_fab_ripple"
        app:srcCompat="@drawable/plus_math_96" />
    <com.ogaclejapan.arclayout.ArcLayout
        android:id="@+id/add_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:arc_origin="bottom"
        app:arc_radius="84dp"
        app:arc_axisRadius="104dp"
        app:arc_freeAngle="false"
        android:layout_marginBottom="44dp"
        app:arc_reverseAngle="false"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/accent"
            app:backgroundTint = "@color/primary"
            app:rippleColor="@color/white_fab_ripple"
            app:arc_origin="center"
            app:fabSize="mini"
            app:srcCompat = "@drawable/folder_96" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/accent"
            app:backgroundTint = "@color/primary"
            app:rippleColor="@color/white_fab_ripple"
            app:arc_origin="center"
            app:fabSize="mini"
            app:srcCompat="@drawable/text_color_96" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/accent"
            app:backgroundTint = "@color/primary"
            app:rippleColor="@color/white_fab_ripple"
            app:arc_origin="center"
            app:fabSize="mini"
            app:srcCompat="@drawable/vk_com_96" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/accent"
            app:backgroundTint = "@color/primary"
            app:rippleColor="@color/white_fab_ripple"
            app:arc_origin="center"
            app:fabSize="mini"
            app:srcCompat="@drawable/instagram_96" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_snap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/accent"
            app:backgroundTint = "@color/primary"
            app:rippleColor="@color/white_fab_ripple"
            app:arc_origin="center"
            app:fabSize="mini"
            app:srcCompat="@drawable/snapchat_96" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/accent"
            app:backgroundTint = "@color/primary"
            app:rippleColor="@color/white_fab_ripple"
            app:arc_origin="center"
            app:fabSize="mini"
            app:srcCompat="@drawable/facebook_96" />
    </com.ogaclejapan.arclayout.ArcLayout>
</RelativeLayout>
