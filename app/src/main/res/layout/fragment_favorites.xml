<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FavoritesFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_recycler"
        android:paddingTop="@dimen/image_recycler_view_padding_top"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ru.jufy.myposh.ui.views.ArcLayout
        android:id = "@+id/arc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.FloatingActionButton
            android:id = "@+id/fab_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_position = "left"
            app:fabSize="mini"
            app:rippleColor="@color/light_fab_ripple"
            app:backgroundTint="@color/light_fab"
            android:tint="@color/light_fab_fg"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_settings_backup_restore_black_24dp"
            />
        <android.support.design.widget.FloatingActionButton
            android:id = "@+id/fab_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_position = "middle"
            app:rippleColor="@color/light_fab_ripple"
            app:backgroundTint="@color/light_fab"
            android:tint="@color/light_fab_fg"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            />
        <android.support.design.widget.FloatingActionButton
            android:id = "@+id/fab_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_position = "right"
            app:fabSize="mini"
            app:rippleColor="@color/light_fab_ripple"
            app:backgroundTint="@color/light_fab"
            android:tint="@color/light_fab_fg"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_select_all_black_24dp"
            />
    </ru.jufy.myposh.ui.views.ArcLayout>
</RelativeLayout>
