        <attr name="big_icon_size" format="dimension" />
        <attr name="small_icon_size" format="dimension" />
        <attr name="shadow_size" format="dimension" />
        <attr name="button_margin" format="dimension" />
        <attr name="big_button_size" format="dimension" />
        <attr name="big_button_border" format="dimension" />
        <attr name="small_button_size" format="dimension" />
        <attr name="small_button_border" format="dimension" />
        <attr name="top_space" format="dimension" />
    </declare-styleable>
        -->
    <declare-styleable name="ArcLayoutLP">
        <attr name="layout_position">
            <enum name="middle" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ArcLayout">
